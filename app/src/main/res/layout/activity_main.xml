<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skip"
        android:backgroundTint="@color/white"
        android:textColor="#313335"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:textStyle="normal"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Recyclerviewid"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/Recyclerviewid"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Ecommerce world"
        android:textAlignment="center"
        android:textColor="#313335"
        android:textSize="40sp"
        android:textStyle="italic"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue with phone"
        android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
        android:backgroundTint="@color/white"
        android:textColor="#313335"
        android:padding="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/continuephonebtnid"
        android:layout_below="@id/continueemailbtnid"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue with Email"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:backgroundTint="#DFDFDF"
        android:textColor="#313335"
        android:padding="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/continueemailbtnid"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Recyclerviewid"

        />





</RelativeLayout>